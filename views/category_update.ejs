<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Update Category</h1>

    <div class="navigation">
      <p><a href="/">Home</a></p>
      <p><a href="/categories/<%= current_category.id %>">Go Back</a></p>
    </div>

    <% if (typeof errors !== 'undefined') { %>
      <div class="form-errors">
        <p>Form submission failed with the following errors:</p>
        <ul>
          <% for (let i = 0; i < errors.length; i++) { %>
            <li><%= errors[i].msg %></li>
          <% } %>
        </ul>
      </div>
    <% } %>

    <form action="/categories/<%= current_category.id %>/update/" method="POST">
      <label for="category_name">Name</label>
      <input id="category_name" type="text" name="category_name" value="<%= current_category.name %>">
      <label for="category_description">Description</label>
      <input id="category_description" type="text" name="category_description" value="<%= current_category.description %>">
        <input type="submit" value="Update">
    </form>
  </body>
</html>
